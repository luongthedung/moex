<div class="admin-header">MeDrivers list
	<div class="contextual"> 
		<a href="{{ path('driver_new') }}" class="icon icon-add">New</a> 
	</div>
</div>

<table class="list records-list" cellspacing="0">
    <thead>
        <tr>
            <th class="spec">Id</th>
            <th>DriverName</th>
            <th>Phone</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in paginator %}
        <tr class="{{ cycle(['odd', 'even'], loop.index) }}">
            <td class="spec">{{ entity.id }}</td>
            <td class="spec"><a href="{{ path('driver_show', { 'id': entity.id }) }}">{{ entity.driverName }}</a></td>
            <td class="name">{{ entity.phone }}</td>
            <td class="position">{{ entity.position }}</td>
            <td class="action">
                <ul>
                    <li>
                        <a class="icon icon-show" href="{{ path('driver_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="icon icon-edit" href="{{ path('driver_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
	{% else %}
		<tr><td>no record found.</td></tr>
    {% endfor %}
    </tbody>
</table>
<div class="pagination-container">
	{{ pagerfanta(paginator, 'default') }}
</div>
